<!DOCTYPE html>  

 <html>
    
    <head>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Filmstrip{% endblock %}</title>
        
        
        {% block stylesheets %}
            <link href="{{ asset('/css/main.css') }}" rel="stylesheet" />
        {% endblock %}
    
    
    </head>
    
    
    <body>

        <div>
        {% block dazfilmstrip%}
        {% endblock %}
        </div>
        
        <div id="sidebar">
            {% block sidebar %}
                <ul>
                      <li><a href="/">Home</a></li>
                      <li><a href="/blog">Blog</a></li>
                </ul>
            {% endblock %}
        </div>

        <div id="content">
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}
            <script src="{{ asset('/js/main.js') }}"></script>
        {% endblock %}
        
    </body>

</html>